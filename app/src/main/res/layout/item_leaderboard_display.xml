<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/material_size_4"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_request_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/lexend_semibold"
        android:text="1)"
        android:textColor="@color/secondary_text_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/material_size_4"
        android:layout_marginStart="@dimen/material_size_4"
        android:layout_toEndOf="@id/item_request_id"
        android:fontFamily="@font/lexend_regular"
        android:maxLines="1"
        android:text="example@somaiya.edu"
        android:textColor="@color/secondary_text_color" />

    <TextView
        android:id="@+id/item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/material_size_4"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@id/item_email"
        android:fontFamily="@font/lexend_regular"
        android:maxLines="1"
        android:text="Count: 3"
        android:textColor="@color/secondary_text_color" />

    <com.somaiya.summer_project.utils.BadgeTextView
        android:id="@+id/item_request_badge"
        android:layout_width="wrap_content"
        android:minWidth="70dp"
        android:gravity="center"
        android:fontFamily="@font/lexend_regular"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_alignBaseline="@id/item_request_id"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="pending" />


</RelativeLayout>